<h1>Listing Posts</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
 
  <% @posts.each do |p| %>
    <tr>
      <td><%= p.title %></td>
      <td><%= p.description %></td>
      <td><%= link_to 'Show', post_path(p) %></td>
      <td><%= link_to 'Edit', edit_post_path(p) %></td>
      <td><%= link_to 'Delete', post_path(p),method: :delete, data:{confirm:"Are you sure, you want to delete this record?"} %></td>

    </tr>
  <% end %>
</table>